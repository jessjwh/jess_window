{% extends 'base.html.jinja' %}


{% block title %}
{{super()}} - Home
{% endblock %}

{% block head %}
{{super()}}
<style type"text/css">
    body {}
</style>
{% endblock %}


{% block main %}
<main class="container text-center">

    <div class="row">
        <div class="col-2" style="background-color:#ff9b54">
            <form action="{{url_for('index')}}" method="get">
                <select class="form-select" aria-label="Default select example" name="area">
                    <option selected>{{show_area}}</option>
                    {% for area in areas %}
                    {% if area != show_area %}
                    <option value="{{area}}">{{area}}</option>
                    {% endif %}
                    {% endfor %}
                </select>
                <button type="submit" class="btn btn-primary" style="background-color: #ce4257;">Let's gooo!</button>
            </form>
        </div>
        <div class="col-10" style="background-color:#ff7f51">
            <h3 style="text-align: left; margin-top: .5em; color:white; font-weight: lighter">{{show_area}}</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Site</th>
                        <th scope="col">Area</th>
                        <th scope="col">Address</th>
                        <th scope="col">Bikes</th>
                        <th scope="col">Spots</th>
                        <th scope="col">Status</th>
                    </tr>
                </thead>
                <tbody>
                    {% for sna in detail_snaes%}
                    <tr>
                        <th scope="row">{{sna[0]}}</th>
                        <td>{{sna[1]}}</td>
                        <td>{{sna[2]}}</td>
                        <td>{{sna[3]}}</td>
                        <td>{{sna[4]}}</td>
                        {% if sna[5]%}
                        <td>Available</td>
                        {% else %}
                        <td>In Repair</td>
                        {% endif%}
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</main>
{% endblock %}
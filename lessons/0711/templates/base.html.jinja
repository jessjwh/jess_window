<!doctype html>
<html lang="zh-tw">

<head>
    {% block head %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="{{url_for('static', filename='style/bootstrap.min.css')}}">
    <script src="{{url_for('static', filename='js/bootstrap.min.js')}}"></script>
    <title>{% block title %}jessify demo{% endblock %}</title>
    {% endblock %}
</head>

<body>
    <nav class="navbar navbar-expand-md bg-body-tertiary">
        <div class="container-md">
            <a class="navbar-brand" style="color: #ce4257;" href="#">
                <img src="{{url_for('static', filename='images/logo.png')}}" alt="Toggle navigation"
                    style="width: 30px; height: 30px;"> jessify</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <img src="{{url_for('static', filename='images/menu.png')}}" alt="Toggle navigation"
                    style="width: 30px; height: 30px;">
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Gallery</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Instagram</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>
                </ul>
            </div>

        </div>
    </nav>
    <main class="container text-center">
    
        <div class="row">
            <div class="col-4" style="background-color:#ff9b54">
                {% block left_content %}
                left_content
                {% endblock %}
            </div>
            <div class="col-8" style="background-color:#ff7f51">
                {% block right_content %}
                right_content
                {% endblock %}
            </div>
        </div>
    </main>

</body>

</html>

